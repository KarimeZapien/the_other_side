@model TheOtherSide.Models.Sale
@{
    ViewData["Title"] = "Confirmación de compra";
    var items = Model?.Cart ?? new List<TheOtherSide.Models.CartItem>();
    // Si quieres mostrar cantidades sin cambiar el modelo, agrupamos por Id/Name:
    var grupos = items
        .GroupBy(x => new { x.Id, x.Name, x.Price })
        .Select(g => new { g.Key.Id, g.Key.Name, g.Key.Price, Qty = g.Count(), Subtotal = g.Sum(x => x.Price) })
        .ToList();
    var total = grupos.Sum(x => x.Subtotal);
}

<h2 class="mb-3">Confirmación</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (!grupos.Any())
{
    <div class="alert alert-warning">Tu carrito está vacío.</div>
}
else
{
    <table class="table align-middle">
        <thead>
            <tr>
                <th>ID</th>
                <th>Producto</th>
                <th class="text-center">Cantidad</th>
                <th class="text-end">Precio</th>
                <th class="text-end">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var it in grupos)
            {
                <tr>
                    <td>@it.Id</td>
                    <td>@it.Name</td>
                    <td class="text-center">@it.Qty</td>
                    <td class="text-end">$@it.Price</td>
                    <td class="text-end">$@it.Subtotal</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="fw-bold">
                <td colspan="4" class="text-end">Total</td>
                <td class="text-end">$@total</td>
            </tr>
        </tfoot>
    </table>

    <form asp-action="ConfirmSale" method="post" class="mt-3">
        <button type="submit" class="btn btn-success">Confirmar</button>
    </form>
}
