@{
    ViewData["Title"] = "Hombre";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">@ViewData["Title"] 👔</h2>
        <div class="row g-4">

            <!-- Producto: Tenis -->
            <div class="col-12 col-md-4">
                <div class="card product-card">
                    <div class="image-container">
                        <img src="~/img/hombre/newbalance2.png" class="card-img-top img-front" alt="NB">
                        <img src="~/img/hombre/newbalance1.png" class="card-img-top img-back" alt="NB">
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title">New Balance 1000</h5>
                        <p class="card-text">$3599.00</p>
                        <a href="#" class="btn btn-outline-primary">Agregar al carrito</a>
                        <a href="#" class="btn btn-success">Comprar ahora</a>
                    </div>
                </div>
            </div>

            <!-- Productos cartera -->
            <div class="col-12 col-md-4">
                <div class="card product-card">
                    <div class="image-container">
                        <img src="~/img/hombre/carteraguess1.png" class="card-img-top img-front" alt="CG">
                        <img src="~/img/hombre/carteraguess2.png" class="card-img-top img-back" alt="CG">
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title">Cartera Guess</h5>
                        <p class="card-text">$599.00</p>
                        <a href="#" class="btn btn-outline-primary">Agregar al carrito</a>
                        <a href="#" class="btn btn-success">Comprar ahora</a>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

