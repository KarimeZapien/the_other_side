@{
    ViewData["Title"] = "Hombre";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">@ViewData["Title"] 👔</h2>
        <div class="row g-4">

            <!-- Producto: Tenis -->
            <div class="col-12 col-md-4">
                <div class="card shadow-sm h-100">
                    <!-- Imagen del producto -->
                    <img src="~/img/NewBalance.png" class="card-img-top" alt="Tenis Deportivos">
                    <div class="card-body text-center">
                        <h5 class="card-title">New Balance 1000</h5>
                        <p class="card-text">$3800 MXN</p>
                        <div class="d-flex justify-content-around">
                            <a href="#" class="btn btn-outline-primary">Agregar al carrito</a>
                            <a href="#" class="btn btn-success">Comprar ahora</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Productos cartera -->
            <div class="col-12 col-md-4">
                <div class="card shadow-sm h-100">
                    <!-- Imagen del producto -->
                    <img src="~/img/12.png" class="card-img-top" alt="Cartera">
                    <div class="card-body text-center">
                        <h5 class="card-title">Cartera Guess</h5>
                        <p class="card-text">$500 MXN</p>
                        <div class="d-flex justify-content-around">
                            <a href="#" class="btn btn-outline-primary">Agregar al carrito</a>
                            <a href="#" class="btn btn-success">Comprar ahora</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

