@{
    ViewData["Title"] = "Inicio";
}

<div class="container my-5">
    <div class="row g-3 justify-content-center">
        <div class="col-12 col-md-6">
            <a asp-area="" asp-controller="Home" asp-action="Mujer" class="menu_imagen d-block text-decoration-none">
                <div class="card bg-dark text-white">
                    <img src="~/img/mujer/mujerfondo.jpeg" class="card-img" alt="Mujer">
                    <div class="card-img-overlay d-flex align-items-end">
                        <h3 class="card-title">Mujer</h3>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-6">
            <a asp-area="" asp-controller="Home" asp-action="Hombres" class="menu_imagen d-block text-decoration-none">
                <div class="card bg-dark text-white">
                    <img src="~/img/hombre/hombresfondo.jpeg" class="card-img" alt="Hombre">
                    <div class="card-img-overlay d-flex align-items-end">
                        <h3 class="card-title">Hombre</h3>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-6">
            <a asp-area="" asp-controller="Home" asp-action="Accesorios" class="menu_imagen d-block text-decoration-none">
                <div class="card bg-dark text-white">
                    <img src="~/img/accesorios/accesoriosfondo1.png" class="card-img" alt="Accesorios">
                    <div class="card-img-overlay d-flex align-items-end">
                        <h3 class="card-title">Accesorios</h3>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-6">
            <a asp-area="" asp-controller="Home" asp-action="Comida" class="menu_imagen d-block text-decoration-none">
                <div class="card bg-dark text-white">
                    <img src="~/img/comida/comidafondo.jpg" class="card-img" alt="Comida">
                    <div class="card-img-overlay d-flex align-items-end">
                        <h3 class="card-title">Comida</h3>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Best sellers -->
<div class="container mt-5 best-sellers">
    <h2 class="text-center mb-4">Conoce nuestros best sellers</h2>

    <div id="productosimagenes" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="carousel-inner align-items-center">

            <!-- Producto 1 -->
            <div class="carousel-item active">
                <div class="card product-card mx-auto" style="max-width: 340px;">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#stanley_Ventana" class="text-decoration-none">
                        <div class="image-container">
                            <img src="~/img/accesorios/stanley1.png" class="w-100 d-block" alt="Stanley Quencher 30 oz vista 1">
                        </div>
                    </a>
                    <div class="card-body text-center">
                        <h5 class="card-title mb-1">Stanley Quencher 30 oz</h5>
                        <p class="card-text mb-3">$879.00</p>
                        <button type="button" class="btn btn-buy btn-sm" data-bs-toggle="modal" data-bs-target="#stanley_Ventana">
                            Comprar
                        </button>
                    </div>
                </div>
            </div>

            <!-- Producto 2 -->
            <div class="carousel-item">
                <div class="card product-card mx-auto" style="max-width: 340px;">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#Rhode_Ventana" class="text-decoration-none">
                        <div class="image-container">
                            <img src="~/img/mujer/producto2rhode.png" class="w-100 d-block" alt="Rhode Peptide Lip Treatment Strawberry Glaze">
                        </div>
                    </a>
                    <div class="card-body text-center">
                        <h5 class="card-title mb-1">Rhode Peptide Lip Treatment Strawberry Glaze</h5>
                        <p class="card-text mb-3">$599.00</p>
                        <button type="button" class="btn btn-buy btn-sm" data-bs-toggle="modal" data-bs-target="#Rhode_Ventana">
                            Comprar
                        </button>
                    </div>
                </div>
            </div>

            <!-- Producto 3 -->
            <div class="carousel-item">
                <div class="card product-card mx-auto" style="max-width: 340px;">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#CheetosVentana" class="text-decoration-none">
                        <div class="image-container">
                            <img src="~/img/comida/comida1.png" class="w-100 d-block" alt="Cheetos">
                        </div>
                    </a>
                    <div class="card-body text-center">
                        <h5 class="card-title mb-1">Cheetos Flaming Hot</h5>
                        <p class="card-text mb-3">$179.00</p>
                        <button type="button" class="btn btn-buy btn-sm" data-bs-toggle="modal" data-bs-target="#CheetosVentana">
                            Comprar
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev no-icon" type="button" data-bs-target="#productosimagenes" data-bs-slide="prev"></button>
        <button class="carousel-control-next no-icon" type="button" data-bs-target="#productosimagenes" data-bs-slide="next"></button>
    </div>
</div>

