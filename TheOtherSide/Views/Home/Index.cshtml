@{
    ViewData["Title"] = "Inicio";
}

<div class="container my-5">
    <div class="row g-3 justify-content-center">
        <div class="col-12 col-md-6">
            <a asp-area="" asp-controller="Home" asp-action="Mujer" class="menu_imagen d-block text-decoration-none">
                <div class="card bg-dark text-white">
                    <img src="~/img/mujer/mujerfondo.jpeg" class="card-img" alt="Mujer">
                    <div class="card-img-overlay d-flex align-items-end">
                        <h3 class="card-title">Mujer</h3>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-6">
            <a asp-area="" asp-controller="Home" asp-action="Hombres" class="menu_imagen d-block text-decoration-none">
                <div class="card bg-dark text-white">
                    <img src="~/img/hombre/hombresfondo.jpeg" class="card-img" alt="Hombre">
                    <div class="card-img-overlay d-flex align-items-end">
                        <h3 class="card-title">Hombre</h3>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-6">
            <a asp-area="" asp-controller="Home" asp-action="Accesorios" class="menu_imagen d-block text-decoration-none">
                <div class="card bg-dark text-white">
                    <img src="~/img/kids/kidsfondo2.jpg" class="card-img" alt="Accesorios">
                    <div class="card-img-overlay d-flex align-items-end">
                        <h3 class="card-title">Accesorios</h3>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-6">
            <a asp-area="" asp-controller="Home" asp-action="Comida" class="menu_imagen d-block text-decoration-none">
                <div class="card bg-dark text-white">
                    <img src="~/img/comida/comidafondo.jpg" class="card-img" alt="Comida">
                    <div class="card-img-overlay d-flex align-items-end">
                        <h3 class="card-title">Comida</h3>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Best sellers -->
<div class="container mt-5">
    <h2 class="text-center mb-4">Conoce nuestros best sellers</h2>

    <div id="productosimagenes" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="carousel-inner align-items-center">

            <!-- Producto 1 -->
            <div class="carousel-item active">
                <a asp-controller="Home" asp-action="Producto1Mujer" class="d-block text-center">
                    <img src="~/img/mujer/elf2.png" class="product-slide-img" alt="Producto 1">
                </a>
                <div class="product-info">
                    <div class="price">$299</div>
                    <div class="name">Elf Jelly Pop Glow Reviver Lip Oil</div>
                    <a asp-controller="Home" asp-action="Producto1Mujer" class="btn btn-buy btn-sm">Comprar</a>
                </div>
            </div>

            <!-- Producto 2  -->
            <div class="carousel-item">
                <a asp-controller="Home" asp-action="Producto1Mujer" class="d-block text-center">
                    <img src="~/img/mujer/producto2rhode.png" class="product-slide-img" alt="Producto 2">
                </a>
                <div class="product-info">
                    <div class="price">$599</div>
                    <div class="name">Rhode Peptide Lip Treatment Strawberry Glaze</div>
                    <button type="button"
                            class="btn btn-buy btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#Rhode_Ventana">
                        Comprar
                    </button>
                </div>
            </div>

            <!-- Producto 3 -->
            <div class="carousel-item">
                <a asp-controller="Home" asp-action="Producto1Mujer" class="d-block text-center">
                    <img src="~/img/mujer/producto5tommy.png" class="product-slide-img" alt="Producto 3">
                </a>
                <div class="product-info">
                    <div class="price">$1099</div>
                    <div class="name">Bolsa Tommy Hilfiger Shoulder Bag Color Negro</div>
                    <a asp-controller="Home" asp-action="Producto1Mujer" class="btn btn-buy btn-sm">Comprar</a>
                </div>
            </div>

        </div>

        <!-- Áreas clicables (sin íconos) -->
        <button class="carousel-control-prev no-icon" type="button" data-bs-target="#productosimagenes" data-bs-slide="prev"></button>
        <button class="carousel-control-next no-icon" type="button" data-bs-target="#productosimagenes" data-bs-slide="next"></button>
    </div>
</div>

<!-- =========================
     MODAL DE PRODUCTO: RHODE
     ========================= -->
<div class="modal fade" id="Rhode_Ventana" tabindex="-1" aria-labelledby="modalRhodeLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content p-3">
            <div class="row g-4 align-items-center">

                <!-- Carrusel de imágenes (lado izquierdo) -->
                <div class="col-md-6">
                    <div id="carouselRhode" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/img/mujer/producto2rhode.png" class="d-block w-100 carousel-modal-img" alt="Rhode 1">
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/mujer/rhode2.png" class="d-block w-100 carousel-modal-img" alt="Rhode 2">
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/mujer/rhode3.png" class="d-block w-100 carousel-modal-img" alt="Rhode 3">
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/mujer/rhode04.png" class="d-block w-100 carousel-modal-img" alt="Rhode 4">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselRhode" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselRhode" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    </div>
                </div>

                <!-- Detalles del producto (lado derecho) -->
                <div class="col-md-6">
                    <h3 id="modalRhodeLabel" class="fw-bold">Rhode Peptide Lip Treatment</h3>
                    <p class="text-muted">
                        Un tratamiento labial nutritivo que hidrata intensamente, suaviza y aporta un brillo natural.
                        Su fórmula con péptidos ayuda a mantener los labios sanos y con aspecto jugoso.
                    </p>
                    <p class="fs-3 fw-bold text-success">$499.00 MXN</p>
                    <ul class="list-unstyled">
                        <li><strong>Marca:</strong> Rhode Skin</li>
                        <li><strong>Acabado:</strong> Brillante y natural</li>
                        <li><strong>Fórmula:</strong> Enriquecida con péptidos y manteca de karité</li>
                        <li><strong>Beneficios:</strong> Hidratación profunda, suavidad y reparación</li>
                        <li><strong>Tono mostrado:</strong> Sin color (Clear)</li>
                    </ul>

                    <form asp-controller="Store" asp-action="AddToCart" method="post" class="d-flex gap-2 mt-2">
                        <input type="hidden" name="id" value="1001" />
                        <button type="submit" class="btn btn-outline-primary flex-fill">Agregar al carrito</button>
                    </form>
                </div>
            </div>

            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
