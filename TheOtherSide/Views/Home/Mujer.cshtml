@{
    ViewData["Title"] = "Mujer";
}

<h2>@ViewData["Title"]</h2>
<p>Aquí van los productos de mujer🎤✨</p>

<div class="container my-5">
    <div class="row g-4">

        <!-- Producto 1- Perfume -->
