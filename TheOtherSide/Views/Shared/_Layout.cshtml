<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TheOtherSide</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- CSS personalizado -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TheOtherSide.styles.css" asp-append-version="true" />
</head>


<body>
    <!-- NAVBAR -->
    <header>

        <nav class="navbar navbar-expand-lg navbar-light navbar-custom">
            <div class="container-fluid">

                <!-- Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/nuevo_logo.png" alt="Logo" width="200" height="100" class="d-inline-block align-text-top">
                </a>

                <!-- Botón hamburguesa responsive -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menú y botones -->
                <div class="collapse navbar-collapse" id="navbarContent">

                    <!-- Menú principal -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Mujer">Mujeres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Hombres">Hombres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Ninos">Niños</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Comida">Comida</a>
                        </li>

                
                    </ul>

                    <!-- Barra de búsqueda -->
                    <form class="d-flex me-3">
                        <input class="form-control search-bar" type="search" placeholder="Buscar..." aria-label="Search">
                    </form>

                    <!-- Botones de inicio de sesión / registro -->
                    <div class="d-flex">
                        <a href="#" class="btn btn-outline-light me-2">Iniciar Sesión</a>
                        <a href="#" class="btn btn-light">Registrarse</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>


    <!-- CONTENIDO -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="footer-custom mt-auto">
        <div class="container text-center py-3">
            <p class="mb-1">
                &copy; 2025 - TheOtherSide -
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a>
            </p>


            <!-- Contactos -->
            <p class="mb-1">
                📞 <a href="tel:+528156773956" class="text-decoration-none">8156773956</a> |
                📧 <a href="mailto:contacto@theotherside.com" class="text-decoration-none">contacto@theotherside.com</a>
            </p>

            <p class="mb-0">
                <a href="https://www.instagram.com/onedirection/" target="_blank">
                    <img src="~/img/logo insta.png" alt="Instagram One Direction" style="width:40px; height:40px;">
                </a>
                |
                <a href="https://www.facebook.com/arianagrande/?locale=es_LA" target="_blank">
                    <img src="~/img/logo facebook.png" alt="" style="width:40px; height:40px;">
                </a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Script para cerrar el menú de tipo hamburguesa al hacer clic en un enlace -->

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var navbarCollapse = document.getElementById('navbarContent');
            var navLinks = navbarCollapse.querySelectorAll('.nav-link');
            var bsCollapse = new bootstrap.Collapse(navbarCollapse, { toggle: false });

            navLinks.forEach(function (link) {
                link.addEventListener('click', function () {
                    if (window.innerWidth < 992) { // Solo en pantallas pequeñas
                        bsCollapse.hide();
                    }
                });
            });
        });
    </script>


</body>
</html>
