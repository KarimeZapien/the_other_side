<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TheOtherSide</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    
    <!-- CSS  -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TheOtherSide.styles.css" asp-append-version="true" />
</head>


<body>
    @using Microsoft.AspNetCore.Http
    @inject IHttpContextAccessor HttpContextAccessor
    @{
        var currentUser = HttpContextAccessor.HttpContext?.Session.GetString("Username");
    }

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light navbar-custom">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/nuevo_logo.png" alt="Logo" width="200" height="100" class="d-inline-block align-middle">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Mujer">Mujer</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Hombres">Hombre</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Accesorios">Accesorios</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Comida">Comida</a></li>
                    </ul>

                    <div class="d-flex align-items-center ms-auto gap-2">
                        @if (!string.IsNullOrEmpty(currentUser))
                        {
                            <span class="me-2 text-black">Hola, @currentUser!</span>

                            <a class="btn btn-outline-primary" asp-controller="Store" asp-action="MyOrders">
                                Mis pedidos
                            </a>

                            <a class="btn btn-outline-dark" asp-controller="Account" asp-action="Logout">Cerrar sesión</a>


                        }
                        else
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class=" btn   btn -outline-primary login- btn " asp-controller="Account" asp-action="Login">Iniciar sesión</a>
                                </li>
                                <li class="nav-item ms-2">
                                    <a class=" btn   btn -outline-primary login- btn " asp-controller="Account" asp-action="Register">Registrarte</a>
                                </li>
                            </ul>
                        }

                        <button class="btn btn-outline-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#cartCanvas">
                            Carrito
                        </button>

                    </div>
                </div>
            </div>
        </nav>
    </header>
    


    <!-- CONTENIDO -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="footer-custom mt-auto">
        <div class="container text-center py-3">
            <p class="mb-1">
                &copy; 2025 - TheOtherSide ·
                <a asp-area="" asp-controller="Home" asp-action="Privacy" aria-label="Aviso de Privacidad">
                    Aviso de Privacidad
                </a>
            </p>


            <!-- Contactos -->
            <p class="mb-1">
                📞 <a href="tel:+528156773956" class="text-decoration-none">8156773956</a> |
                📧 <a href="mailto:contacto@theotherside.com" class="text-decoration-none">contacto@theotherside.com</a>
            </p>

        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_CartOffcanvas")
    <script>
        document.addEventListener("DOMContentLoaded", function () {
          var canvas = document.getElementById('cartCanvas');
          if (!canvas) return;
          canvas.addEventListener('show.bs.offcanvas', function () {
            fetch('@Url.Action("CartPanel", "Store")', { cache: 'no-store' })
              .then(r => r.text())
              .then(html => { document.getElementById('cartBody').innerHTML = html; })
              .catch(() => { document.getElementById('cartBody').innerHTML = '<div class="text-danger">Error al cargar.</div>'; });
          });
        });
    </script>
</body>
</html>
